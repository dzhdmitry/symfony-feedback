<!DOCTYPE html>
<html id="no-js">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <meta name="description" content="Feedback Symfony 3 app">
        <title>{% block title %}Feedback{% endblock %}</title>
        <link href="{{ asset("css/style.css") }}" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>
        <header>
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <a class="navbar-brand" href="{{ path("homepage") }}" title="Go to front page">Feedback</a>
                    </div>

                    <div class="collapse navbar-collapse" id="navbar-main">
                        <ul class="nav navbar-nav navbar-right">
                            {% if app.user %}
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        Logged in as {{ app.user }} <span class="caret"></span>
                                    </a>

                                    <ul class="dropdown-menu">
                                        {% if is_granted("ROLE_ADMIN") %}
                                            <li><a href="{{ path("admin") }}">Admin</a></li>
                                        {% endif %}

                                        <li><a href="{{ path("fos_user_security_logout") }}">Logout</a></li>
                                    </ul>
                                </li>
                            {% else %}
                                <li>
                                    <a href="{{ path("fos_user_security_login") }}">Log in</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container">
            <div class="alert alert-warning noscript">
                <b>Feedback app requires Javascript.</b>
                Please enable Javascript in your browser to use all site's functionality
            </div>

            {% if app.session.flashBag.has("success") %}
                <div class="alert alert-success">
                    {% for message in app.session.flashBag.get("success") %}
                        {{ message }}
                        {% if not loop.last %}<br>{% endif %}
                    {% endfor %}
                </div>
            {% endif %}

            {% block body %}{% endblock %}
        </div>

        <script>
            document.documentElement.id = "js";
        </script>

        <script src="{{ asset("js/libraries.js") }}"></script>
        <script src="{{ asset("js/app.js") }}"></script>
        {% block javascripts %}{% endblock %}

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
    </body>
</html>
