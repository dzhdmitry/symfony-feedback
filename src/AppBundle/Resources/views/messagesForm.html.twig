{% form_theme form "bootstrap_3_horizontal_layout.html.twig" %}

{{ form_start(form) }}
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="message-form">
            {{ form_row(form.author) }}
            {{ form_row(form.email) }}
            {{ form_row(form.body) }}
            {{ form_row(form.picture.originalFilename) }}
        </div>

        <div role="tabpanel" class="tab-pane" id="message-preview">
            <div class="loading">
                Loading&hellip;
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12 text-right">
            <button type="button" data-target="#message-preview" id="action-message-preview" class="btn btn-default">Preview&hellip;</button>
            <button type="button" data-target="#message-form" id="action-message-edit" class="btn btn-default hide">Continue edit</button>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
{{ form_end(form) }}
