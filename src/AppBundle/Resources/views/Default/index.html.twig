{% extends 'base.html.twig' %}

{% block body %}
    {% if messages|length %}
        <div class="messages-controls text-right">
            <div class="btn-group btn-group-sm">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {% if p.sort == "author" %}
                        {{ "messages.sorted_by_author"|trans }}
                    {% elseif p.sort == "email" %}
                        {{ "messages.sorted_by_email"|trans }}
                    {% else %}
                        {{ "messages.sorted_by_date"|trans }}
                    {% endif %}

                    <span class="caret"></span>
                </button>

                <ul class="dropdown-menu dropdown-menu-right">
                    <li{% if p.sort == "author" %} class="active"{% endif %}>
                        <a href="{{ path("homepage", {sort: "author", direction: p.direction}) }}" title="{{ "messages.sort_by_author"|trans }}">
                            {{ "list.author"|trans }}
                        </a>
                    </li>

                    <li{% if p.sort == "email" %} class="active"{% endif %}>
                        <a href="{{ path("homepage", {sort: "email", direction: p.direction}) }}" title="{{ "messages.sort_by_email"|trans }}">
                            {{ "list.email"|trans }}
                        </a>
                    </li>

                    <li{% if p.sort == "createdAt" %} class="active"{% endif %}>
                        <a href="{{ path("homepage", {sort: "createdAt", direction: p.direction}) }}" title="{{ "messages.sort_by_date"|trans }}">
                            {{ "list.createdAt"|trans }}
                        </a>
                    </li>
                </ul>
            </div>

            <div class="btn-group btn-group-sm">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    {% if p.direction == "asc" %}
                        {{ "messages.ordered_by_asc"|trans }}
                    {% else %}
                        {{ "messages.ordered_by_desc"|trans }}
                    {% endif %}

                    <span class="caret"></span>
                </button>

                <ul class="dropdown-menu dropdown-menu-right">
                    <li{% if p.direction == "asc" %} class="active"{% endif %}>
                        <a href="{{ path("homepage", {sort: p.sort, direction: "asc"}) }}" title="{{ "messages.order_by_asc"|trans }}">
                            {{ "order.asc"|trans }}
                        </a>
                    </li>

                    <li{% if p.direction == "desc" %} class="active"{% endif %}>
                        <a href="{{ path("homepage", {sort: p.sort, direction: "desc"}) }}" title="{{ "messages.order_by_desc"|trans }}">
                            {{ "order.desc"|trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    {% endif %}

    <div class="messages-container">
        {% for message in messages %}
            {% include "@App/message.html.twig" %}
        {% else %}
            <div class="alert alert-info">
                {{ "messages.empty"|trans }}
            </div>
        {% endfor %}
    </div>

    <div id="create-message-form-container" data-url="{{ path("preview_message_draft") }}">
        {% include "@App/messageCreateForm.html.twig" with {form: messageForm} %}
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(function() {
            var form = new MessageForm({
                el: $('#create-message-form-container'),
                messages: {
                    preview: "{{ "js.preview"|trans }}"
                }
            });
        });
    </script>
{% endblock %}
