{% extends 'base.html.twig' %}

{% block title %}{{ "pages.editing_message"|trans }} &ndash; Feedback{% endblock %}

{% block body %}
    <h1>
        {{ "pages.editing_message"|trans }}
    </h1>

    <div id="edit-message-form-container" data-url="{{ path("preview_message", {id: message.id}) }}">
        {% include "@App/messageEditForm.html.twig" %}
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(function() {
            var form = new MessageForm({
                el: $('#edit-message-form-container'),
                messages: {
                    preview: "{{ "js.preview"|trans }}"
                }
            });
        });
    </script>
{% endblock %}
